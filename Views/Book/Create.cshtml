@model BookModel
<h2>Добавяне</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Заглавие</label>
        <input asp-for="Title">
    </div>
    <div>
        <label>Автор</label>
        <input asp-for="Author">
    </div>
    <div>
        <label>Година</label>
        <input asp-for="Year">
    </div>
    <div>
        <label>Жанр</label>
        <input asp-for="Genre">
    </div>
    <button type="submit">Добави</button>
</form>